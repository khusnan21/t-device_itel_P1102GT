#!/system/bin/sh

 rm -rf /data/local/python31/.cache

 PYDROID_DIR="/data/local/python31"
 export HOME="$PYDROID_DIR"

 export PATH="${PYDROID_DIR}/usr/bin:${PATH}"
 export LD_LIBRARY_PATH="${PYDROID_DIR}/usr/lib:${LD_LIBRARY_PATH}"

 [ ! "${TMPDIR}" ] &&
  export TMPDIR="/data/local/tmp"

 python31 -m pip "$@"
